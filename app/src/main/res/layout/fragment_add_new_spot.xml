<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewSpotFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp">

        <TextView
            android:id="@+id/textViewAddNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add new place!"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/textViewAddNew"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/editTextName"
            android:ems="10"
            android:hint="Description"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/editTextLat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/editTextDescription"
            android:ems="10"
            android:hint="Latitude"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/editTextLng"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/editTextLat"
            android:ems="10"
            android:hint="Longitude"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Save" />

        <ImageView
            android:id="@+id/addImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/editTextLng"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_image_24" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/addImage"
            android:text="Add image:"
            android:textSize="20sp" />

    </RelativeLayout>

</FrameLayout>